/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@ngx-base-state": ["projects/ngx-base-state/src/lib"],
      "@extension-services": ["projects/ngx-base-state-extension/src/app/services"],
      "@extension-services/*": ["projects/ngx-base-state-extension/src/app/services/*"],
      "@extension-core": ["projects/ngx-base-state-extension/src/app/core"],
      "@extension-core/*": ["projects/ngx-base-state-extension/src/app/core/*"],
      "@extension-shared": ["projects/ngx-base-state-extension/src/app/shared"],
      "@extension-shared/*": ["projects/ngx-base-state-extension/src/app/shared/*"],
      "@extension-data": ["projects/ngx-base-state-extension/src/app/data"],
      "@extension-data/*": ["projects/ngx-base-state-extension/src/app/data/*"],
      "@extension-interfaces": ["projects/ngx-base-state-extension/src/app/interfaces"],
      "@extension-interfaces/*": ["projects/ngx-base-state-extension/src/app/interfaces/*"],
      "@extension-classes": ["projects/ngx-base-state-extension/src/app/classes"],
      "@extension-classes/*": ["projects/ngx-base-state-extension/src/app/classes/*"],
      "@extension-enums": ["projects/ngx-base-state-extension/src/app/enums"],
      "@extension-enums/*": ["projects/ngx-base-state-extension/src/app/enums/*"],
      "@extension-env": ["projects/ngx-base-state-extension/src/environments/environment"]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
